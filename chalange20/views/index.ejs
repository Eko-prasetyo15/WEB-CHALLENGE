<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />

    <title>BREAD</title>
  </head>
  <body>
    <h1 class="container">BREAD (Browse, Read, Edit, Add, Delete)</h1>
    <h2 class="container">Filter</h2>
    <div class="p-3 mb-2 bg-dark text-white"></div>
    <form action="/" method="get">
      <div class="container">
        <div class="form-group row">
          <label for = "id" class="col-sm-2 col-form-label">
            <input type ="checkbox" name ="check_id" <%= query.check_id ? ' checked' : '' %>>id
          </label>
          <div class="row col-sm-6">
            <input class="form-control" type="text" id= "id" value= "<%= query.id %>" name ="id"  placeholder="ID"
            />
          </div>
        </div>
      </div>
      <div class="container">
        <div class="form-group row">
          <label class="col-sm-2 col-form-label">
            <input type="checkbox" name = "check_String" aria-label="Checkbox for following text input" <%= query.check_String ? ' checked ' : '' %>>String
          </label>
          <div class="row col-sm-6">
            <input class="form-control" type="text" name="String" value = "<%= query.String %>" placeholder="String"
            />
          </div>
        </div>
      </div>
      <div class="container">
        <div class="form-group row">
          <label class="col-sm-2 col-form-label">
            <input type="checkbox" name = "check_Integer" aria-label="Checkbox for following text input" <%= query.check_Integer ? ' Checked' : '' %>>Integer
          </label>
          <div class="row col-sm-6">
            <input class="form-control" type="number" name="Integer" value = "<%= query.Integer %>" placeholder="Integer"
            />
          </div>
        </div>
      </div>
      <div class="container">
        <div class="form-group row">
          <label class="col-sm-2 col-form-label">
            <input type="checkbox" name = "check_Float" aria-label="Checkbox for following text input" <%= query.check_Float ? ' Checked' : '' %>/>Float
          </label>
          <div class="row col-sm-6">
            <input class="form-control" type="text" name="Float" value = "<%= query.Float %>" placeholder="Float"
            /></div>
          </div>
        </div>
        <div class="container">
          <div class="form-group row">
            <label class="col-sm-2 col-form-label">
              <input type="checkbox" name = "check_Date" <%= query.check_Date ? ' checked' : '' %> />Date
            </label>
            <div class="row col-sm-3">
              <input class="form-control" type="date" name= "startDate" id="startDate" value = "<%= query.startDate %>">to
              <input class="form-control" type="date"  id="endDate" name="endDate" value = "<%= query.endDate %>">
            </div>
          </div>
        </div>
        <div class="container">
          <div class="form-group row">
            <label class="col-sm-2 col-form-label">
              <input type="checkbox" name= "check_Boolean" <%= query.check_Boolean ? ' checked' : '' %>/>Boolean
            </label>
            <div class="row col-sm-6">
              <select class="form-control" id="Boolean" name="Boolean">
                <option disabled selected placeholder="">--choose the boolean--</option>
                <option value = "True" <%= query.check_Boolean == "True" ? ' selected' : '' %> </option>True</option>
                <option value = "False" <%= query.check_Boolean == "False" ? ' selected' : '' %> </option>False</option>
              </select>
            </div>
            </div>
          </div>
        </div>
        <div class ="container">
          <button type="submit" class="btn btn-primary">Search</button>
          <a href="/" type="submit" class="btn btn-primary">reset</a>
        </div>
    </form>
    <br>
    
    <table class="table container">
      <thead class="thead-dark">
        <tr>
          <th scope="col">ID</th>
          <th scope="col">String</th>
          <th scope="col">Integer</th>
          <th scope="col">Float</th>
          <th scope="col">Date</th>
          <th scope="col">Boolean</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach((item) => {%>
        <tr>
          <th scope="row"><%=item.id%></th>
          <td><%=item.String%></td>
          <td><%=item.Integer%></td>
          <td><%=item.Float%></td>
          <td><%=item.Date%></td>
          <td><%=item.Boolean%></td>
          <td>
            <a href="edit/<%= item.id %>"><button type="button" class="btn btn-primary">Edit</button></a>
            <a href="delete/<%= item.id %>"><button type="button" class="btn btn-danger">Delete</button></a>
          </td>
        </tr>
        <%})%>
      </tbody>
    </table>
    <nav aria-label="Page navigation example">
      <ul class="container pagination">
        <li class="page-item <%= page == 1 ? 'disabled' : ''; %>">
          <a class="page-link" href="/?page=<%= parseInt(page) - 1 %>">Previous</a>
      </li>
      <% for (let i = 1; i <= pages; i++) { %>
      <li class="page-item <%= page == i ? 'active' : ''; %>"></li>
          <a class="page-link" href="/?page=<%= i %>"><%= i %></a></li>
      <%};%>
      
      <li class="page-item <%= page == pages ? 'disabled' : ''; %>">
          <a class="page-link" href="/?page=<%= parseInt(page) + 1 %>">Next</a>
      </li>
      </ul>
    </nav>
    <div class="container">
    <a class="btn btn-primary" type = "submit" href="/add" role="button">add</a>
    </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script
      src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
      integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
      integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
